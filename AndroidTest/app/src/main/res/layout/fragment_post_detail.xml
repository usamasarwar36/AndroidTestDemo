<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"
    android:fillViewport="true"
    tools:context="com.test.androidtest.home.ui.PostDetailFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/grey"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">
            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/Title"
                android:layout_gravity="left|start"
                android:padding="16dp"
                tools:text="Post Title" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_gravity="left|start">
                <TextView
                    android:id="@+id/text_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Body"
                    android:visibility="gone"
                    android:textColor="@android:color/black"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:drawableStart="@drawable/ic_face_black_24dp"
                    android:drawableLeft="@drawable/ic_face_black_24dp"
                    android:drawablePadding="2dp"
                    android:gravity="center"
                    tools:text="Author Name" />

                <TextView
                    android:id="@+id/text_comments_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Body"
                    android:visibility="gone"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:padding="4dp"
                    android:drawableStart="@drawable/ic_comment_black_24dp"
                    android:drawableLeft="@drawable/ic_comment_black_24dp"
                    android:drawablePadding="2dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    tools:text="100" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/text_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Body"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:padding="16dp"
            android:layout_gravity="left|start"
            android:gravity="left|start"
            tools:text="Body Text" />

    </LinearLayout>
</ScrollView>
